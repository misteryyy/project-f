    <script type="text/javascript">
    //handle thumbnail click 
    $(document).ready(function() { 
      $('#carousel-nav a').click(function(q){
        q.preventDefault();


        targetSlide = $(this).attr('data-to')-1;
        $('#myCarousel').carousel(targetSlide);
        $('#myCarousel').carousel('pause');
        
        $('#descriptions div').each(function(o){
            $(this).css('display','none');
        });
        $('#carousel-nav li').each(function(o){
            $(this).css('border-color','#c8c8c8');
        });

        $('#description_'+targetSlide).css('display','block');
        $('#carousel-nav-'+targetSlide).css('border','2px solid #585999');
        
       });
    }); 
    </script> 

